<h3>Giỏ hàng</h3>

<% if (!cart || cart.length === 0) { %>
  <p>Giỏ hàng trống. <a href="/products">Xem sản phẩm</a></p>
<% } else { %>
  <form action="/cart/clear" method="post" class="mb-2">
    <button class="btn btn-outline-danger btn-sm" type="submit">Xoá hết giỏ hàng</button>
  </form>

  <table class="table align-middle">
    <thead>
      <tr>
        <th>Sản phẩm</th>
        <th>Biến thể</th>
        <th>Giá</th>
        <th>Số lượng</th>
        <th>Thành tiền</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% cart.forEach(item => { %>
        <tr>
          <td>
            <div class="d-flex align-items-center">
              <img src="<%= item.image %>" alt="<%= item.name %>" style="width: 60px" class="me-2">
              <span><%= item.name %></span>
            </div>
          </td>
          <td><%= item.variantName %></td>
          <td><%= item.price.toLocaleString("vi-VN") %>₫</td>
          <td><%= item.qty %></td>
          <td><%= (item.price * item.qty).toLocaleString("vi-VN") %>₫</td>
          <td>
            <form action="/cart/remove" method="post">
              <input type="hidden" name="productId" value="<%= item.productId %>">
              <input type="hidden" name="variantId" value="<%= item.variantId %>">
              <button class="btn btn-sm btn-danger" type="submit">Xoá</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <div class="text-end">
    <h4>Tổng: <span class="text-danger"><%= total.toLocaleString("vi-VN") %>₫</span></h4>
    <a href="/orders/checkout" class="btn btn-success">Tiến hành đặt hàng</a>
  </div>
<% } %>
